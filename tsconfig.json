{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "./build"
  },
  "include": ["src/**/*", "declarations.d.ts", "server.js"],
  "exclude": ["node_modules"]
}
